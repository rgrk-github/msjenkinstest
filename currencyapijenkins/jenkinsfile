#!groovy
pipeline{
 agent any
 
  tools {
    maven 'maven'
  }
 
 stages{
 
   stage("build"){
   
       steps{
       
          bat "mvn -f ./currencyapijenkins clean install -DskipTests"
          bat "docker build -f currencyapijenkins/dockerfile -t currencyapijenkinsv1 ./currencyapijenkins"
          bat "docker run -p 7090:7078 --name virtusa-c2 --link virtusa-mysql:mysql -d currencyapijenkinsv1:latest"                
       }
   
   }
 
 }
 
 
 
}
